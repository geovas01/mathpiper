%mathpiper,def=""

HighschoolForm(expression) :=
[
    //Note: since := is at a higher precedence than :/, parentheses are needed.
    expression := (expression /: [ (x_NegativeNumber?) / _y <- [Echo(x,/,y);]]);
    
    expression := (expression  /: [_z^((x_NegativeInteger?)/y_Number?) <- [z,x,y]]);
    
];


%/mathpiper

    %output,preserve="false"
      Result: True
.   %/output


