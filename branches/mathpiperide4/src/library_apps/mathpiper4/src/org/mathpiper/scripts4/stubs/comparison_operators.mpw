Verify(0.1<?2,True);
Verify(.3<?2,True);
Verify(2<?.1,False);
Verify(2<?0.1,False);
Verify(2<?.3,False);
Verify(1e-5 <? 1, True);
Verify(1e-5 <? 2e-5, True);
Verify(1e-1 <? 2e-1, True);
Verify(1e-15 <? 2e-15, True);
