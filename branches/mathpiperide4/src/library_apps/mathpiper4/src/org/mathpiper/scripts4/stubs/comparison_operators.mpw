Verify(1e-5 <? 1e-2, True);
Verify(-1e-5 <? 1e-5, True);
Verify(-1e-5 <? 1e-6, True);

BuiltinPrecisionSet(32);
Verify(0.999999999999999999999999999992 <? 1, True);
BuiltinPrecisionSet(10);

%/mathpiper





