<!-- Action definition file for Fortress plugin -->


<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="piper.choose-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="piper.save-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="piper.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.piperplugin.FortressPlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

