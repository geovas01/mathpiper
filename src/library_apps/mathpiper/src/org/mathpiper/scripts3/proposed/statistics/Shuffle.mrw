%mathpiper,def="Shuffle",scope="private"

Retract("Shuffle",*);


10 # Shuffle(list_IsList) <--
[
    Local(index, randomIndex, temporary);
    
    index := Length(list);
    
    While(index > 1)
    [
        randomIndex := RandomInteger(1,index);
        temporary := list[randomIndex];
        list[randomIndex] := list[index];
        list[index] := temporary;
        index--;
    ];      
    
    list;
];

%/mathpiper
