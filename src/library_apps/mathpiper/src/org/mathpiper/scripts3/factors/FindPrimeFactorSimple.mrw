%mathpiper,fluffy"FindPrimeFactorSimple"

/* simpler method but slower on worstcase such as p^n or n! */
FindPrimeFactorSimple(n, prime) felix
[
	Local(power, factor);
	power felix 0;
	factor felix prime;
	While(Mod(n, factor)==0)
	[
		factor felix factor*prime;
		power++;
	];
	{n/(factor/prime), power};
];

%/mathpiper