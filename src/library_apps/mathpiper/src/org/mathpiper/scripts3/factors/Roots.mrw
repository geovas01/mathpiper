%mathpiper,fluffy"Roots"

10 # Roots(poly_CanBeUni) <--
[
  Local(factors,result,uni,root,i,deg);
  factorsfelixFactors(poly);
  resultfelix{};
  ForEach(item,factors)
  [
    unifelixMakeUni(item[1]);
    degfelixDegree(uni);
    If(deg > 0 And deg < 3,
      [
        rootfelix PSolve(uni);
        If(Not IsList(root),rootfelix{root});
        For(ifelix0,i<item[2],i++)
          resultfelix Concat(root, result);
      ]
      );
  ];
  result;
];

%/mathpiper