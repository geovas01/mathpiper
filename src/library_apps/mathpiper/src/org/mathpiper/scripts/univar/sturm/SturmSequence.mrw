%mathpiper,def="true"

/** SturmSequence(p) : generate a Sturm sequence for a polynomial in x.
 */
SturmSequence(_p) <--
[
  Local(result,i,deg,nt);
  result:={p,`D(@x)(@p)};
  deg:=Degree(p);
  For(i:=3,i<=deg+1,i++)
  [
    nt := -NormalForm(MultiDivide(MM(result[i-2],{x}),{MM(result[i-1],{x})})[2]);
    DestructiveAppend(result,nt);
  ];
  result;
];

%/mathpiper