%mathpiper,def="V"

LocalSymbols(Verbose) [
  Set(Verbose,False);
  Function("V",{aNumberBody})
  [
    Local(prevVerbose,result);
    Set(prevVerbose,Verbose);
    Set(Verbose,True);
    Set(result,Eval(aNumberBody));
    Set(Verbose,prevVerbose);
    result;
  ];
  Function("InVerboseMode",{}) Verbose;

]; // LocalSymbols(Verbose)
HoldArg("V",aNumberBody);
UnFence("V",1);

%/mathpiper