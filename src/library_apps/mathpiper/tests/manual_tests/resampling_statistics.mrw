%mathpiper
RandomInteger(first, last) :=
[
    difference := last - first;

    Round(Random() * difference) + first;
];



%/mathpiper

    %output,preserve="false"
      Result: True
.   %/output



%mathpiper

Retract("RandomPick",*);


10 # RandomPick(list_IsList) <--
[
    pickPosition := RandomInteger(Length(list)) + 1;

    list[pickPosition];
];




Retract("Shuffle",*);


10 # Shuffle(list_IsList) <--
[
    n := Length(list);
    
    While(n > 1)
    [
        k := RandomInteger(1,n);
        tmp := list[k];
        list[k] := list[n];
        list[n] := tmp;
        n--;
    ];      
    
    list;
];


%/mathpiper

    %output,preserve="false"
      Result: True
.   %/output



