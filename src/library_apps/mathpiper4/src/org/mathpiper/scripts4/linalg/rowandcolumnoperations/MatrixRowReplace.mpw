%mathpiper,def="MatrixRowReplace"

MatrixRowReplace( M_Matrix?, iRow_PositiveInteger?, v_Vector? )::(Length(v)=?Length(M[1])) <--
{
    Decide( Not? Assigned?(iDebug), iDebug := False );
    Decide( iDebug, Tell(MatrixRowReplace,[M,iRow,v]) );
    Local(mRows,nCols);
    [mRows,nCols] := Dimensions(M);
    Decide( iRow <=? mRows, DestructiveReplace(M,iRow,v) );
    M;
};

%/MathPiper