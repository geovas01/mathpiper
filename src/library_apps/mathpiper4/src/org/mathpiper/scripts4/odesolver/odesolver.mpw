OdeTest(_e,_solution) <--
{
  Local(s);
  s:= `Lambda([n],If(n>?0)(Differentiate(x,n)(@solution)) Else (@solution));
  e:=OdeNormalForm(e);
  e:=Apply("OdeSubstitute",[e,s]);
  e:=Simplify(e);
  e;
};

