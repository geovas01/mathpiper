Verify( OdeTest(yPRIME/5-Sin(x), OdeSolve(yPRIME/5==Sin(x)) ), 0 );
Verify( OdeTest(x*yPRIME - 1,    OdeSolve(x*yPRIME==1) ), 0 );

%/mathpiper