%mathpiper,def="StringFromFile"

StringFromFile(path) :=
{
	Check(FileExists?(path), "", "The file <" ~ path ~ "> does not exist.");
	
	Local(path);
	
	path2 := JavaCall("java.nio.file.Paths","get", path, JavaCall("java.lang.reflect.Array", "newInstance", JavaCall(JavaNew("java.lang.String"),"getClass"),0));
	
	JavaToValue(JavaNew("java.lang.String", JavaCall("java.nio.file.Files", "readAllBytes", path2)));
};

%/mathpiper





