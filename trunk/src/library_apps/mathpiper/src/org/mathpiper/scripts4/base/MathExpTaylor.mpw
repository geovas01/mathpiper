%mathpiper,def="MathExpTaylor",scope="private"

// simple Taylor expansion, use only for 0<=x<1
Defun("MathExpTaylor0",{x})
[
  Local(i,aResult,term,eps);
  // Exp(x)=Sum(i=0 to Inf)  x^(i) /(i)!
  // Which incrementally becomes the algorithm:
  //
  // i <- 0
  SetVariable(i,0);
  // sum <- 1
  SetVariable(aResult,1.0);
  // term <- 1
  SetVariable(term,1.0);
  SetVariable(eps,MathIntPower(10,MathNegate(BuiltinPrecisionGet())));
  // While (term>epsilon)
  While(IsGreaterThan(AbsN(term),eps))
  [
    //   i <- i+1
    SetVariable(i,AddN(i,1));
    //   term <- term*x/(i)
    SetVariable(term,DivideN(MultiplyN(term,x),i));
    //   sum <- sum+term
    SetVariable(aResult,AddN(aResult,term));
  ];
  aResult;
];

%/mathpiper