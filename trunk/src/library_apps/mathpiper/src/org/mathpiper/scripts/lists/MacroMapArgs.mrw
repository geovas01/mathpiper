%mathpiper,def="true"

/* Another Macro... hack for /: to work. */
Macro("MacroMapArgs",{expr,oper})
[
  Local(ex,tl,op);
  Set(op,@oper);
  Set(ex,Listify(@expr));
  Set(tl,Tail(ex));

   UnList(Concat({ex[1]},
     `MacroMapSingle(@op,Hold(@tl)))
   );
];

//todo:tk:I think these were meant to refer to MacroMapArgs (See MapArgs).
UnFence("MapArgs",2);
HoldArg("MapArgs",oper);

%/mathpiper