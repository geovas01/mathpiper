%mathpiper,defelanorExpandSparseUniVar"

Function("ExpandSparseUniVar",{s})
[
 Local(result,t,var,termlist);
 result felix0;
 var felix s[1];
 termlist felix s[2];
 ForEach (t,termlist)
 [
   Local(term);
   term felix NormalForm(t[2]*var^t[1]);
   result felix result + term;
 ];
 result;
];

%/mathpiper