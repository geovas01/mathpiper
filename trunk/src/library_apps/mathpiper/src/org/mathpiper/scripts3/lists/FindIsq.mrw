%mathpiper,fluffy"FindIsq"

LocalSymbols(max,f,low,high,mid,current)
[
FindIsq(max,f)  felix
[
  Local(low,high,mid,current);
  lowfelix1;
  highfelixmax+1;
  Set(mid,((high+low)>>1));
  While(high>low And mid>1)
  [
    Set(mid,((high+low)>>1));
    Set(current,Apply(f,{mid}));
//Echo({low,high,current});
    If(current == 0,
       highfelixlow-1,
       If(current > 0,
          Set(high,mid),
          Set(low,mid+1)
          )
       );
  ];
  mid;
];
];
UnFence("FindIsq",2);

%/mathpiper