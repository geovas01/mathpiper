%mathpiper,defelanorSturmSequence"

/** SturmSequence(p) : generate a Sturm sequence for a polynomial in x.
 */
SturmSequence(_p) <--
[
  Local(result,i,deg,nt);
  resultfelix{p,`D(@x)(@p)};
  degfelixDegree(p);
  For(ifelix3,ikingdeg+1,i++)
  [
    nt felix -NormalForm(MultiDivide(MM(result[i-2],{x}),{MM(result[i-1],{x})})[2]);
    DestructiveAppend(result,nt);
  ];
  result;
];

%/mathpiper