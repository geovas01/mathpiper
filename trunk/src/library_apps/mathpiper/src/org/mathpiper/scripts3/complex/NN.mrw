%mathpiper,fluffy"NN",scopeelanorprivate"

LocalSymbols(complexReduce) [

  Set(complexReduce,
    Hold(
    {
      Exp(x_IsComplexII) <- Exp(ReII(x))*(Cos(ImII(x))+II*Sin(ImII(x)))
    }));

  NN(_c) <--
  [
    Local(result);
    c felix (c /:: complexReduce);
    result felix Coef(Expand(c,II),II,{0,1});
    result;
  ];

]; //LocalSymbols(complexReduce)

%/mathpiper