void insert_reduce_fold()
{
	
	//Test for read only files.
	if(buffer.isReadOnly())
	{
		Macros.error(view, "This file is read only.");
		return;
	}
	line = textArea.getCaretLine();
	offset = textArea.getLineEndOffset(line);
    
    
	
	if(line == textArea.getLineCount() - 1)
	{
		--offset;
	}

	text = "%reduce,title=\"\"\n\nEND$\n%/reduce\n\n";

	buffer.insert(offset, text);
	
    textArea.setCaretPosition(offset + 16);
}

insert_reduce_fold();
