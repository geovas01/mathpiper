void insert_group_fold()
{
	
	//Test for read only files.
	if(buffer.isReadOnly())
	{
		Macros.error(view, "This file is read only.");
		return;
	}
	line = textArea.getCaretLine();
	
	offset = textArea.getLineEndOffset(line);
    
    
	
	if(line == textArea.getLineCount() - 1)
	{
		--offset;
	}
	
	
	indent = textArea.getLineText(line);
	text =  indent + "%piper,description=\"\"\n" + indent + "\n" + indent + "%/piper\n\n";

	buffer.insertIndented(offset, text);
	
    //textArea.setCaretPosition(textArea.getCaretPosition() - 8);
}

insert_group_fold();
