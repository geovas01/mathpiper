# Properties file for Piper plugin.


#{{{ Must be in order.
# jEdit only needs to load the plugin the first time the user accesses it
# the presence of this property also tells jEdit the plugin is using the new API
plugin.org.mathrider.piperplugin.PiperPlugin.activate=defer
# we only have one dependency, jEdit 4.2, since we use the new plugin API
# These two properties are required for all plugins
plugin.org.mathrider.piperplugin.PiperPlugin.name=Piper
plugin.org.mathrider.piperplugin.PiperPlugin.author=Ted Kosan

# version number == jEdit version number
plugin.org.mathrider.piperplugin.PiperPlugin.version=4.3

# online help
plugin.org.mathrider.piperplugin.PiperPlugin.docs=index.html
plugin.org.mathrider.piperplugin.PiperPlugin.depend.0=jedit 04.02.01.00
plugin.org.mathrider.piperplugin.PiperPlugin.depend.1=jdk 1.5
plugin.org.mathrider.piperplugin.PiperPlugin.2=plugin console.ConsolePlugin 4.3.5
plugin.org.mathrider.piperplugin.PiperPlugin.description=This plugin provides a dockable "scratch pad" for writing and displaying notes, to do lists or similar items as unformatted text.
plugin.org.mathrider.piperplugin.PiperPlugin..longdescription=description.html
#}}}




piper.shell.msg.info=\nPiper Shell \n\


piper.shell.msg.usage=See http://mathrider.org for information on how to use Piper.



# plugin menu
plugin.org.mathrider.piperplugin.PiperPlugin.menu=piper \
	- \
	piper.choose-file \
	piper.save-file \
	piper.copy-to-buffer

# action labels for actions supplied by dockables.xml
piper.label=piper

# action labels for actions supplied by actions.xml
piper.choose-file.label=Choose notepad file
piper.save-file.label=Save notepad file
piper.copy-to-buffer.label=Copy notepad to buffer

# plugin option pane
plugin.piper.option-pane=piper

# Option pane activation BeanShell snippet
options.piper.code=new org.mathrider.piperplugin.PiperOptionPane();

# Option pane labels
options.piper.label=piper
options.piper.file=File:
options.piper.choose-file=Choose
options.piper.choose-file.title=Choose a notepad file
options.piper.choose-font=Font:
options.piper.show-filepath.title=Display notepad file path

# window title
piper.title=Piper

# window toolbar buttons
piper.choose-file.icon=Open.png
piper.save-file.icon=Save.png
piper.copy-to-buffer.icon=CopyToBuffer.png

# default settings
options.piper.show-filepath=true
options.piper.font=Monospaced
options.piper.fontstyle=0
options.piper.fontsize=14

# Setting not defined but supplied for completeness
options.piper.filepath=

