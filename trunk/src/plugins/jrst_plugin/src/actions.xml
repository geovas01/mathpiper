<!-- Action definition file for JRST plugin -->


<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="jrst.choose-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="jrst.save-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="jrst.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.jrstplugin.JRSTPlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

