<!-- Action definition file for ABCL plugin -->


<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="abcl.choose-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="abcl.save-file">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="abcl.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME);
			wm.getDockableWindow(org.mathpiper.ide.abclplugin.ABCLPlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

